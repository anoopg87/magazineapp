<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="10dp">



    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/txtFactHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/blue"/>

        <TextView
            android:id="@+id/txtFactDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFactHead"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/imgFact"
            android:layout_toStartOf="@+id/imgFact"
            android:text=""
            android:textSize="18dp"
            android:textColor="@color/grey"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textStyle="normal" />


        <ImageView
            android:id="@+id/imgFact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txtFactDescription"
            android:layout_below="@+id/txtFactHead" />
    </RelativeLayout>


</android.support.v7.widget.CardView>


